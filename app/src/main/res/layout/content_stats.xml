<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_stats" tools:context="com.benlewis.mmtrainerapp.Stats"
    android:background="#e7e7e7">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout3"
        android:layout_margin="2sp"
        android:elevation="10sp"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Average:"
            android:id="@+id/statsOverallText"
            android:textSize="25sp"
            android:layout_margin="5sp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Best:"
            android:id="@+id/statsBestText"
            android:layout_below="@+id/statsRecentText"
            android:layout_alignParentStart="true"
            android:textSize="25sp"
            android:layout_margin="5sp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recent:"
            android:id="@+id/statsRecentText"
            android:layout_below="@+id/statsLastText"
            android:layout_alignParentStart="true"
            android:textSize="25sp"
            android:layout_margin="5sp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last 7:"
            android:id="@+id/statsLastText"
            android:layout_below="@+id/statsOverallText"
            android:layout_alignParentStart="true"
            android:textSize="25sp"
            android:layout_margin="5sp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play a game!"
            android:id="@+id/statsOverallResults"
            android:textSize="25sp"
            android:layout_marginLeft="2sp"
            android:layout_marginRight="2sp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/statsOverallText"
            android:textColor="#000000"
            android:layout_margin="5sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play a game!"
            android:id="@+id/statsLastResults"
            android:textSize="25sp"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:textColor="#000000"
            android:layout_alignTop="@+id/statsLastText"
            android:layout_toEndOf="@+id/statsLastText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play a game!"
            android:id="@+id/statsRecentResults"
            android:textSize="25sp"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:textColor="#000000"
            android:layout_alignTop="@+id/statsRecentText"
            android:layout_toEndOf="@+id/statsRecentText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play a game!"
            android:id="@+id/statsBestResults"
            android:textSize="25sp"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:textColor="#000000"
            android:layout_alignTop="@+id/statsBestText"
            android:layout_toEndOf="@+id/statsBestText" />

    </RelativeLayout>

</RelativeLayout>
